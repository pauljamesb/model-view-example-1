@model S1.Models.Pizza

@{
    ViewData["Title"] = "Create";
}

<h2>Create a new Pizza</h2>

<form method="post" asp-action="Create">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <label asp-for="NameOfPizza"></label><br />
    <input asp-for="NameOfPizza" />

    <span asp-validation-for="NameOfPizza" class="text-danger"></span>

    <input type="submit" value="Create" />
    <a asp-action="Index">Back to pizza list</a>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}